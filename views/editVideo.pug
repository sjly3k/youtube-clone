extends layouts/main

block content
    .form-container
            form(action=routes.editProfile, method="post")
                input(type="text", name="title", placeholder="Title")
                textarea(type="description", placeholder="Description")
                input(type="submit", value="Update Video")
            a.form-container__link.form-container__link--delete(href=`/videos${routes.changePassword}`) Delete Video